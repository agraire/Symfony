<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ProStage{% endblock %}</title>

        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- BLOC DES FEUILLES DE STYLE -->
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            <link rel="stylesheet" href="{{asset('/css/fontello.css')}}">
        {% endblock %}

        
    </head>
    <body>
        <div class="container-fluide">
        <!-- BLOC DU SLIDER -->
        {% block slider %}
        <div class="row">
            <div class="col-4 offset-4 mt-4">
                <img src="{{asset('img/ProStage.png')}}" class="shadow-lg p-3 mb-5 bg-body rounded img-fluid" alt="..." />
            </div>
        </div>
        {% endblock %}

        <!-- BLOC DU MENU -->
        {% block menu %}
        <div class="row">
            <div class="col-12">
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <div class="container-fluid">
                      <a class="navbar-brand" href="#">Liste des stages</a>
                      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                      </button>
                      <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                          <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{path('prostage_accueil')}}">Pas de filtre</a>
                          </li>
                          <li class="nav-item">
                            <a class="nav-link" href="{{path('prostage_FiltreParEntreprise')}}">Filtrer par entreprise</a>
                          </li>
                          <li class="nav-item">
                            <a class="nav-link" href="{{path('prostage_FiltreParFormation')}}">Filtrer par formation</a>
                          </li>
                        </ul>
                        <ul class="navbar-nav ml-md-auto">
                          <li class="nav-item active">
                            <a class="nav-link" href="#">
                             <i class="icon-user"></i>
                               Déconnexion
                            <span class="sr-only">(current)</span></a>
                           </li>
                        </ul>
                      </div>
                    </div>
                  </nav>
            </div>
        </div>
        {% endblock %}

        <!-- BLOC DU CONTENU DE LA PAGE -->
        {% block contenu %}
        <div class="row">
            <div class="col-12">
                <ul class="list-group">
                    <li class="list-group-item">An item</li>
                    <li class="list-group-item">A second item</li>
                  </ul>
            </div>
        </div>
        {% endblock %}

        <!-- PIED DE PAGE -->
        {% block footer %}
            <div class="row" style="margin-top:15px;">
              <div class="col-md-12">
                <p class="text-secondary">
                  Site réalisé avec les frameworks
                  <a href="https://symfony.com/">Symfony</a>
                  et
                  <a href="https://getbootstrap.com/">Bootstrap</a>.
                  Images libres de droit en provenance de
                  <a href="https://www.pexels.com/">pexels.com</a>
                  et
                  <a href="http://lorempixel.com/">lorempixel.com</a>.
                </p>
              </div>
            </div>
          </div>
        {% endblock %}

        <!-- BLOC JAVASCRIPT -->
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
        {% endblock %}
        </div>
    </body>
</html>
